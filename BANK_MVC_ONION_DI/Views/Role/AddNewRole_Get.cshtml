
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.TODO</title>
</head>
<body>
    @using (Html.BeginForm("AddNewRole_Post", "Role", FormMethod.Post))
    {
